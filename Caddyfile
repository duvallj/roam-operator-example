{
	log default {
		level DEBUG
		include http.log.access http.handlers.reverse_proxy
	}
}


http://localhost:2015 {
	# reverse_proxy /v0/* http://localhost:5560 {
	# 	rewrite /api{uri}
	# }
	reverse_proxy /v0/* https://api.roam.dev {
		header_up Host "api.roam.dev"
		header_up -Origin
		header_up -Referer
		header_up -Sec-*
	}
	# reverse_proxy /v0/* https://api.ro.am {
	# 	header_up Host "api.ro.am"
	# 	header_up -Origin
	# 	header_up -Referer
	# 	header_up -Sec-*
	# }
	file_server
	log default {
		output stdout
		format console
	}
}
